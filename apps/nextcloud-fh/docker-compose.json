{
  "services": [
    {
      "name": "nextcloud-fh",
      "image": "nextcloud:30.0.6-fpm-alpine",
      "isMain": false,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/nextcloud-fh",
          "containerPath": "/var/www/html:cached"
        }
      ],
      "environment": {
        "POSTGRES_HOST": "nextcloud-fh-db",
        "POSTGRES_DB": "nextcloud",
        "POSTGRES_USER": "nextcloud",
        "POSTGRES_PASSWORD": "${NEXTCLOUD_FH_DB_PASSWORD}",
        "NEXTCLOUD_ADMIN_PASSWORD": "${NEXTCLOUD_FH_ADMIN_PASSWORD}",
        "NEXTCLOUD_ADMIN_USER": "${NEXTCLOUD_FH_ADMIN_USER}",
        "NEXTCLOUD_TRUSTED_DOMAINS": "${APP_DOMAIN}",
        "TRUSTED_PROXIES": "127.0.0.1 172.16.0.0/12",
        "REDIS_HOST": "nextcloud-fh-redis"
      },
      "dependsOn": ["nextcloud-fh-db", "nextcloud-fh-redis"]
    },
    {
      "name": "nextcloud-fh-web",
      "image": "nginx:latest",
      "internalPort": 80,
      "isMain": true,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/nextcloud-fh-web/nginx.conf",
          "containerPath": "/etc/nginx/nginx.conf:ro"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/nextcloud-fh",
          "containerPath": "/var/www/html:cached"
        }
      ],
      "environment": {
        "VIRTUAL_HOST": "${APP_DOMAIN}"
      },
      "dependsOn": ["nextcloud-fh"]
    },
    {
      "name": "nextcloud-fh-cron",
      "image": "nextcloud:30.0.6-fpm-alpine",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/nextcloud-fh",
          "containerPath": "/var/www/html"
        }
      ],
      "entrypoint": ["/cron.sh"],
      "dependsOn": ["nextcloud-fh", "nextcloud-fh-redis"]
    },
    {
      "name": "nextcloud-fh-redis",
      "image": "redis:alpine"
    },
    {
      "name": "nextcloud-fh-db",
      "image": "postgres:16-alpine",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "environment": {
        "POSTGRES_DB": "nextcloud",
        "POSTGRES_USER": "nextcloud",
        "POSTGRES_PASSWORD": "${NEXTCLOUD_FH_DB_PASSWORD}"
      }
    }
  ],
  "$schema": "../dynamic-compose-schema.json"
}
