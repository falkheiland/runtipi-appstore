{
  "$schema": "https://raw.githubusercontent.com/runtipi/runtipi-appstore/refs/heads/master/apps/dynamic-compose-schema.json",
  "services": [
    {
      "name": "nextcloud-fpm",
      "image": "nextcloud:31.0.4-fpm-alpine",
      "isMain": false,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/nextcloud-fpm",
          "containerPath": "/var/www/html:cached"
        }
      ],
      "environment": {
        "POSTGRES_HOST": "nextcloud-fpm-db",
        "POSTGRES_DB": "nextcloud",
        "POSTGRES_USER": "nextcloud",
        "POSTGRES_PASSWORD": "${NEXTCLOUD_FPM_DB_PASSWORD}",
        "NEXTCLOUD_ADMIN_PASSWORD": "${NEXTCLOUD_FPM_ADMIN_PASSWORD}",
        "NEXTCLOUD_ADMIN_USER": "${NEXTCLOUD_FPM_ADMIN_USER}",
        "NEXTCLOUD_TRUSTED_DOMAINS": "${APP_DOMAIN}",
        "TRUSTED_PROXIES": "127.0.0.1 172.16.0.0/12",
        "REDIS_HOST": "nextcloud-fpm-redis"
      },
      "dependsOn": ["nextcloud-fpm-db", "nextcloud-fpm-redis"]
    },
    {
      "name": "nextcloud-fpm-web",
      "image": "nginx:latest",
      "internalPort": 80,
      "isMain": true,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/nextcloud-fpm-web/nginx.conf",
          "containerPath": "/etc/nginx/nginx.conf:ro"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/nextcloud-fpm",
          "containerPath": "/var/www/html:cached"
        }
      ],
      "environment": {
        "VIRTUAL_HOST": "${APP_DOMAIN}"
      },
      "dependsOn": ["nextcloud-fpm"]
    },
    {
      "name": "nextcloud-fpm-cron",
      "image": "nextcloud:31.0.4-fpm-alpine",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/nextcloud-fpm",
          "containerPath": "/var/www/html"
        }
      ],
      "entrypoint": ["/cron.sh"],
      "dependsOn": ["nextcloud-fpm", "nextcloud-fpm-redis"]
    },
    {
      "name": "nextcloud-fpm-redis",
      "image": "redis:alpine"
    },
    {
      "name": "nextcloud-fpm-db",
      "image": "postgres:16-alpine",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "environment": {
        "POSTGRES_DB": "nextcloud",
        "POSTGRES_USER": "nextcloud",
        "POSTGRES_PASSWORD": "${NEXTCLOUD_FPM_DB_PASSWORD}"
      }
    }
  ]
}
